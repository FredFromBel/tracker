{
  "routes": [
    {
      "route": "/api/hello",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/teststorage",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/checkins",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/*",
      "allowedRoles": ["authenticated"]
    }
  ],
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/aad",
      "statusCode": 302
    }
  },
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/common/v2.0"
        }
      }
    }
  }
}
